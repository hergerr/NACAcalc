<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/standard_spacing"
    android:paddingBottom="@dimen/standard_spacing"
    android:paddingRight="@dimen/standard_spacing"
    android:paddingLeft="@dimen/standard_spacing"
    android:columnCount="7"
    android:rowCount="14">

    <TextView
        android:id="@+id/lol"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/naca"
        android:layout_column="0"
        android:layout_row="0"
        />

    <EditText
        android:ems="3"
        android:gravity="right"
        android:nextFocusDown="@+id/naca_edit_2"
        android:id="@+id/naca_edit_1"
        android:hint="0"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="0"
        android:layout_marginLeft="@dimen/standard_spacing"/>

    <EditText
        android:ems="2"
        android:gravity="right"
        android:hint="0"
        android:nextFocusDown="@+id/naca_edit_3"
        android:id="@+id/naca_edit_2"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_marginLeft="@dimen/standard_spacing"/>

    <EditText
        android:hint="0"
        android:ems="2"
        android:gravity="right"
        android:nextFocusDown="@+id/naca_edit_4"
        android:id="@+id/naca_edit_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="3"
        android:layout_marginLeft="@dimen/standard_spacing"
        android:layout_row="0"
        android:inputType="numberDecimal"
        android:singleLine="false" />

    <EditText
        android:id="@+id/naca_edit_4"
        android:ems="2"
        android:gravity="right"
        android:nextFocusDown="@+id/xb"
        android:hint="00"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="4"
        android:layout_row="0"
        android:layout_marginLeft="@dimen/standard_spacing"/>

    <TextView

        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xb"
        android:layout_column="0"
        android:layout_row="1"
        />

    <EditText
        android:id="@+id/xb"
        android:ems="3"
        android:gravity="right"
        android:nextFocusDown="@+id/chord"
        android:hint="0.0"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_marginLeft="@dimen/standard_spacing"/>

    <TextView

        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/chord"
        android:layout_column="0"
        android:layout_row="2"
        />

    <EditText
        android:id="@+id/chord"
        android:ems="3"
        android:gravity="right"
        android:hint="000"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_marginLeft="@dimen/standard_spacing"/>


    <TextView

        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/f"
        android:layout_column="0"
        android:layout_row="3"
        />

    <EditText
        android:id="@+id/f"
        android:ems="3"
        android:gravity="right"
        android:hint="0.000"
        android:inputType="numberDecimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_marginLeft="@dimen/standard_spacing"/>

    <Button
        android:id="@+id/next_button1"
        android:text="@string/next"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_marginTop="@dimen/standard_spacing"
        android:layout_gravity="right"
        android:layout_columnSpan="7"
        />




</GridLayout>
